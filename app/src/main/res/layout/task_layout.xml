<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/relative_layout"
    android:background="@android:color/white"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/task_list"
        android:scrollbars="vertical"
        android:layout_gravity="center"
        android:layout_above="@+id/contact_hl_team"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.hl.homelanebuddy.views.HLProgressView
        android:layout_centerInParent="true"
        android:id="@+id/progress_view"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <Button
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:background="#A9F5A9"
        android:id="@+id/call_button"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_call_black_24dp"
        android:text="@string/call_homelane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="30dp"
        android:background="@drawable/rounded_rect_gray"
        android:id="@+id/error_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/contact_hl_team"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#CEF6CE"
        android:padding="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            app:backgroundTint="@color/white"
            android:id="@+id/call_myteam_button"
            app:fabSize="mini"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp" />


        <Spinner
            android:id="@+id/hl_team_spinner"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chat_black_18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            android:id="@+id/email_button" />

    </LinearLayout>
</RelativeLayout>
